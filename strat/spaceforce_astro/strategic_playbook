  <script>
    const sectionGroups = [
      [{ id: 'exec-summary', label: 'Executive Summary' }, { id: 'past-performance', label: 'Past Performance' }],
      [{ id: 'technical', label: 'Technical Approach' }, { id: 'ipe', label: 'Intelligent Product Engine' }, { id: 'dod-alignment', label: 'DoD Strategy Alignment' }],
      [{ id: 'management', label: 'Management Approach' }, { id: 'risk', label: 'Risk Management' }, { id: 'roadmap', label: '90-Day Roadmap' }],
      [{ id: 'cost', label: 'Cost & ROI Analysis' }, { id: 'security', label: 'Security & Compliance' }, { id: 'sustainment', label: 'Transition & Sustainment' }]
    ];
    const allSections = sectionGroups.flat();
    let activeSection = 'exec-summary';

    function renderNav() {
      sectionGroups.forEach((group, gi) => {
        const nav = document.getElementById('navItems' + (gi + 1));
        let globalIdx = sectionGroups.slice(0, gi).flat().length;
        nav.innerHTML = group.map((s, i) => `
          <button class="nav-btn ${activeSection === s.id ? 'active' : ''}" onclick="setSection('${s.id}')">
            <span class="nav-num">${globalIdx + i + 1}</span>
            <span>${s.label}</span>
          </button>
        `).join('');
      });
    }

    function setSection(id) {
      activeSection = id;
      renderNav();
      renderContent();
      window.scrollTo(0, 0);
    }

    function renderContent() {
      const main = document.getElementById('mainContent');
      const content = {
        'exec-summary': `
