  <script>
    const sectionGroups = [
      [{ id: 'exec-summary', label: 'Executive Summary' }, { id: 'why-knapsack', label: 'Why Knapsack' }, { id: 'three-year', label: 'Three-Year Program' }],
      [{ id: 'technical', label: 'Technical Approach' }, { id: 'ai-readiness', label: 'AI & Automation' }, { id: 'discovery', label: '6-Week Discovery' }],
      [{ id: 'charter-overview', label: 'Charter Overview' }, { id: 'governance', label: 'Governance Model' }, { id: 'roles', label: 'Roles & Lifecycle' }],
      [{ id: 'resourcing', label: 'Team Resourcing' }, { id: 'metrics', label: 'Success Metrics' }, { id: 'risk', label: 'Risk & Next Steps' }]
    ];
    let activeSection = 'exec-summary';

    function renderNav() {
      sectionGroups.forEach((group, gi) => {
        const nav = document.getElementById('navItems' + (gi + 1));
        let globalIdx = sectionGroups.slice(0, gi).flat().length;
        nav.innerHTML = group.map((s, i) => `
          <button class="nav-btn ${activeSection === s.id ? 'active' : ''}" onclick="setSection('${s.id}')">
            <span class="nav-num">${globalIdx + i + 1}</span>
            <span>${s.label}</span>
          </button>
        `).join('');
      });
    }

    function setSection(id) {
      activeSection = id;
      renderNav();
      renderContent();
      window.scrollTo(0, 0);
    }

    function renderContent() {
      const main = document.getElementById('mainContent');
      const content = {
        'exec-summary': `
